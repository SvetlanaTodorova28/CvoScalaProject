<h3 class="text-center display-4 fw-bolder m-3">Importeer Excel</h3>
<form method="post" enctype="multipart/form-data">
    <div class="mx-auto d-flex align-items-center w-25">
        <input class="file m-1" name="file" type="file" />
    </div>
    <div class="mx-auto w-25">
        <input class="w-100 m-1 btn btn-outline-danger" type="submit" asp-controller="Admin" asp-action="UploadExcelFile" value="Importeer nieuwe startsituatie" />
        <a class="w-100 m-1 btn btn-outline-info" asp-area="Admin" asp-controller="Admin" asp-action="Index">Terug</a>
    </div>
</form>