@model OrdersShowOrderOverviewViewModel
<h2 class="text-center display-4 fw-bolder m-3">Resultaat van je bestelling @Model.OrdersTitle</h2>
@if (Model.CustomerName != string.Empty)
{
    <h4 class="mb-2 mx-auto">Bestelling voor: @Model.CustomerName</h4>
}
<div class="mx-auto d-flex flex-column align-items-center">
    <partial name="_UserProductStateOverviewPartialView" model="@Model" />
    <div>
        <a class="btn btn-outline-info m-2" asp-controller="Overview" asp-action="Index">Terug naar overzicht</a>
        <a class="btn btn-outline-info m-2" asp-controller="Orders" asp-action="SelectOrderType">Nieuwe Bestelling</a>
    </div>
</div>