@model AccountRegisterViewmodel
<div class="col-lg-4 mx-auto h-100">
    <h3 class="text-center display-4 fw-bolder m-3">Registreren</h3>
    <form asp-controller="Account" asp-action="Register" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger fw-bolder"></div>
        <div class="form-group m-1">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control text-secondary" />
            <span asp-validation-for="FirstName" class="text-danger fw-bolder"></span>
        </div>
        <div class="form-group m-1">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control text-secondary" />
            <span asp-validation-for="LastName" class="text-danger fw-bolder"></span>
        </div>
        <div class="form-group m-1">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control text-secondary" autocomplete="new-email"/>
            <span asp-validation-for="Email" class="text-danger fw-bolder"></span>
        </div>
        <div class="form-group m-1">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control text-secondary"  autocomplete="new-password" />
            <span asp-validation-for="Password" class="text-danger fw-bolder"></span>
        </div>
        <div class="form-group m-1">
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" class="form-control text-secondary"  autocomplete="new-password"/>
            <span asp-validation-for="ConfirmPassword" class="text-danger fw-bolder"></span>
        </div>
        <div class="text-center">
            <a class="btn btn-outline-info m-1" asp-area="Admin" asp-controller="Admin" asp-action="StudentAccounts">Terug</a>
            <button type="submit" class="btn btn-outline-info m-1">Registreer</button>
        </div>
    </form>
</div>