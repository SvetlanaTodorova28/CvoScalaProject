@model SalesShowResultsViewModel

@{
    ViewData["Title"] = "Verkoopcijfers";
}

@if (Model.SalesData.Sum(p => p.Quantity) == 0)
{
    <h2 class="text-center display-4 fw-bolder m-3">Helaas</h2>
    <h3 class="text-center display-7 m-3">Er is nog niets verkocht van jouw selectie</h3>
}
else
{
    <h2 class="text-center display-4 fw-bolder m-3">@ViewData["Title"]</h2>
    @if (!Model.IsStudent)
    {
        <h3 class="text-center display-7 m-3">@Model.StudentName</h3>
    }
    <div class="container">
        <div class="row justify-content-center">
            @if (Model.ChartType == "pie")
            {
                <div class="col-md-5">
                    <div class="chart-container">
                        <canvas id="productSalesChart"></canvas>
                    </div>
                </div>
            }
            else
            {
                <div class="col-md-8">
                    <div class="chart-container">
                        <canvas id="productSalesChart"></canvas>
                    </div>
                </div>
            }
        </div>
    </div>
}
<div class="d-flex justify-content-center">
    <a class="btn btn-outline-info m-3" asp-controller="Sales" asp-action="SelectProducts" asp-route-chartType="@Model.ChartType" asp-route-studentId="@Model.StudentId">Terug</a>
</div>