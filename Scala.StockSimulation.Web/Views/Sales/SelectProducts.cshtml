@model SalesSelectProductsViewModel

<h2 class="text-center display-4 fw-bolder m-3">Selecteer artikelen</h2>

<form class="mx-auto d-flex flex-column align-items-center w-25" id="productSelectionForm" asp-controller="Sales" asp-action="ShowResults" method="post">
    <input type="hidden" name="chartType" value="@Model.ChartType">
    <input type="hidden" name="studentId" value="@Model.StudentId">
    <div class="text-danger fw-bolder" asp-validation-summary="All"></div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th class="text-center">Kies Product</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="@product.ProductId" name="selectedProducts" value="@product.ProductId">
                            <label class="form-check-label" for="@product.ProductId">@product.Text</label>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="d-flex justify-content-center">
        <a class="btn btn-outline-info m-3" asp-controller="Sales" asp-action="Index" asp-route-studentId="@Model.StudentId">Terug</a>
        <button type="submit" class="m-3 btn btn-outline-info">Bekijk resultaten</button>
    </div>
</form>
